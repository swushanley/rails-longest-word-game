<h1 class=text-center>Welcome to the word game</h1>
<div class="container">
  <p class="text-center"><%= @grid %></p>
  <h1 class="text-center">Take a guess</h1>
  <form action="/score" method="get" class="text-center">
  <input type="text" name="query" placeholder="Your guess">
  <input type="hidden" name="grid" value="<%= @grid %>">
  <input type="hidden" name="start_time" value="<%= Time.now %>">
  <button type="submit" class="btn btn-primary">
    Submit
  </button>
  </form>
</div>

